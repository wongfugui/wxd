.header{
  width: 100%;
  height: 110rpx;
  box-sizing: border-box;
  border-top: 6rpx solid #009a61;
  padding: 10rpx 20rpx;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0,0,0,0.1), 0 2rpx rgba(0,0,0,0.1);
  background: #fafafa;
  text-align: center
}
.header-search{
  height: 40rpx;
  width: 40rpx;
  padding: 22rpx;
  float: left

}
 .logo{
  width: 200rpx;
  height: 84rpx;
} 
 .header-user{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  padding: 0;
  float: right
} 
