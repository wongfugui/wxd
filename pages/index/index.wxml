<!--index.wxml-->
<view class="container">

  <view class='main-info'>
    <view class='today'>
      <view class='city'>
        <image src='../../images/location.png'></image>
        <text>{{weatherData.currentCity || '--'}}</text>
      </view>
      <view class='update-date'>07-10 22:55 更新</view>
      <view class='temp'>
        {{temp || '--'}}<text>°</text>
      </view>
      <view class='weather'>{{weather || '--'}}</view>
      <view class='pm'>
        <text>{{weatherData.pm25 || '--'}}</text>
      </view>
    </view>

